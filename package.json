{
  "name": "@telerik/kendo-package-base",
  "description": "Kendo UI NPM Package starter template",
  "repository": {
    "type": "git",
    "url": "https://github.com/telerik/kendo-package-base.git"
  },
  "main": "dist/npm/js/Feature.js",
  "typings": "dist/npm/js/bundle",
  "scripts": {
    "build-package": "gulp build-npm-package",
    "test": "gulp test",
    "lint": "gulp lint",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "Kendo UI"
  ],
  "dependencies": {},
  "devDependencies": {
    "@telerik/eslint-config": "^1.0.0",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.0.3",
    "gulp": "3.9.0",
    "@telerik/kendo-package-tasks": "^1.0.0",
    "validate-commit-msg": "^1.1.1",
    "semantic-release": "^4.3.5"
  },
  "author": "Telerik",
  "license": "Apache-2.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm run test"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    }
  }
}
